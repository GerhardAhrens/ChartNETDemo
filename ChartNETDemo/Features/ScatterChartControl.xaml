<UserControl
    x:Class="ChartNETDemo.ScatterChartControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartNETDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="400"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <!--  Rotation helper  -->
    <UserControl.Resources>
        <RotateTransform x:Key="Rotate90" Angle="-90" />
    </UserControl.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="160" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <!--  ================= Plot Area =================  -->

            <Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="6"
                Background="White"
                BorderBrush="#BBB"
                BorderThickness="1">

                <Canvas x:Name="PlotArea" ClipToBounds="True">

                    <!--  ===== Gridlines =====  -->

                    <ItemsControl ItemsSource="{Binding GridLines, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Line
                                    Stroke="#E0E0E0"
                                    StrokeThickness="1"
                                    X1="{Binding X1}"
                                    X2="{Binding X2}"
                                    Y1="{Binding Y1}"
                                    Y2="{Binding Y2}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  ===== Scatter Points =====  -->

                    <ItemsControl ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!--  WICHTIG: Position auf ContentPresenter  -->
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding PlotX}" />
                                <Setter Property="Canvas.Top" Value="{Binding PlotY}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Ellipse
                                    Width="10"
                                    Height="10"
                                    Fill="{Binding Color}"
                                    Stroke="Black"
                                    StrokeThickness="0.5">
                                    <!--  Mittelpunkt  -->
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="-5" Y="-5" />
                                    </Ellipse.RenderTransform>

                                    <Ellipse.ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{Binding Path=Category}" />
                                            <TextBlock Text="{Binding Path=X, StringFormat=X: {0:F2}}" />
                                            <TextBlock Text="{Binding Path=Y, StringFormat=Y: {0:F2}}" />
                                        </StackPanel>
                                    </Ellipse.ToolTip>
                                </Ellipse>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  ===== X Axis Ticks =====  -->

                    <ItemsControl ItemsSource="{Binding XTicks, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding Position}" />
                                <Setter Property="Canvas.Top" Value="{Binding RelativeSource={RelativeSource AncestorType=Canvas}, Path=ActualHeight}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Line
                                        Stroke="Black"
                                        X1="0"
                                        X2="0"
                                        Y1="0"
                                        Y2="6" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="11"
                                        Text="{Binding Label}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  ===== Y Axis Ticks =====  -->

                    <ItemsControl ItemsSource="{Binding YTicks, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="0" />
                                <Setter Property="Canvas.Top" Value="{Binding Position}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Line
                                        Stroke="Black"
                                        X1="0"
                                        X2="6"
                                        Y1="0"
                                        Y2="0" />
                                    <TextBlock
                                        Margin="4,-6,0,0"
                                        FontSize="11"
                                        Text="{Binding Label}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </Canvas>
            </Border>

            <!--  ================= Legend =================  -->

            <Border
                Grid.Row="0"
                Grid.Column="1"
                Margin="6"
                Padding="8"
                Background="White"
                BorderBrush="#BBB"
                BorderThickness="1">

                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,6"
                        FontWeight="Bold"
                        Text="Legende" />

                    <ItemsControl ItemsSource="{Binding Legend, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,3" Orientation="Horizontal">
                                    <Rectangle
                                        Width="14"
                                        Height="14"
                                        Fill="{Binding Color}"
                                        Stroke="Black"
                                        StrokeThickness="0.5" />
                                    <TextBlock
                                        Margin="6,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!--  ================= Axis Titles =================  -->

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Center"
                FontWeight="SemiBold"
                Text="X-Achse" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="4,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                Text="Y-Achse">

                <TextBlock.LayoutTransform>
                    <RotateTransform Angle="-90" />
                </TextBlock.LayoutTransform>
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
