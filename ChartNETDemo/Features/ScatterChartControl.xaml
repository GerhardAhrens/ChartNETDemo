<UserControl
    x:Class="ChartNETDemo.ScatterChartControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartNETDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="400"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <!--  Rotation helper  -->
    <UserControl.Resources>
        <RotateTransform x:Key="Rotate90" Angle="-90" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="160" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  =================== Diagram ===================  -->

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1">

            <Canvas x:Name="PlotArea" ClipToBounds="True">

                <!--  Gridlines  -->
                <ItemsControl ItemsSource="{Binding GridLines, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                X1="{Binding X1}"
                                X2="{Binding X2}"
                                Y1="{Binding Y1}"
                                Y2="{Binding Y2}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Scatter Points  -->
                <ItemsControl ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Ellipse
                                Canvas.Left="{Binding Path=PlotX}"
                                Canvas.Top="{Binding Path=PlotY}"
                                Width="10"
                                Height="10"
                                Fill="{Binding Path=Color}"
                                Stroke="Black"
                                StrokeThickness="0.5">
                                <Ellipse.ToolTip>
                                    <Border Padding="6" Background="#222">
                                        <StackPanel>
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="{Binding Category}" />

                                            <TextBlock Foreground="White" Text="{Binding X, StringFormat=X: {0:F2}}" />

                                            <TextBlock Foreground="White" Text="{Binding Y, StringFormat=Y: {0:F2}}" />
                                        </StackPanel>
                                    </Border>
                                </Ellipse.ToolTip>
                            </Ellipse>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </Border>

        <!--  =================== Legend ===================  -->

        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Padding="8"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1">

            <StackPanel>
                <TextBlock
                    Margin="0,0,0,6"
                    FontWeight="Bold"
                    Text="Legende" />

                <ItemsControl ItemsSource="{Binding Legend, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,3" Orientation="Horizontal">

                                <Rectangle
                                    Width="14"
                                    Height="14"
                                    Fill="{Binding Color}"
                                    Stroke="Black"
                                    StrokeThickness="0.5" />

                                <TextBlock
                                    Margin="6,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!--  =================== Axis titles ===================  -->

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,6"
            HorizontalAlignment="Center"
            FontWeight="SemiBold"
            Text="X-Achse" />

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="6,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            LayoutTransform="{StaticResource ResourceKey=Rotate90}"
            Text="Y-Achse" />
    </Grid>
</UserControl>
