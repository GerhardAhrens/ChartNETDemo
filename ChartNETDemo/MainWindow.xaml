<Window
    x:Class="ChartNETDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartNETDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Path=WindowTitel, FallbackValue=~WindowTitel}"
    Width="900"
    Height="600"
    mc:Ignorable="d">
    <Window.Icon>
        <BitmapImage UriSource="pack://application:,,,/Resources/Picture/ApplicationIcon.png" />
    </Window.Icon>
    <Grid x:Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button
            x:Name="BtnCloseApplication"
            Grid.Row="0"
            Grid.Column="0"
            Width="30"
            Height="30"
            HorizontalAlignment="Left">
            <Image Source="{StaticResource ResourceKey=IconApplicationExit2}" Stretch="None" />
        </Button>

        <Rectangle
            Grid.Row="0"
            Height="2"
            Margin="0,33,0,0"
            HorizontalAlignment="Stretch"
            Fill="Black" />

        <Grid Grid.Row="1">
            <!--
            <local:LineChartControl
                x:Name="LineChart"
                Width="600"
                Height="400"
                GridLineBrush="Gainsboro"
                GridLineThickness="1"
                HorizontalGridLineCount="4"
                Lines="{Binding Path=ChartLines}"
                VerticalGridLineCount="6"
                XAxisTitle="Zeit (Jahre)"
                XAxisTitleAlignment="Center"
                XAxisTitleBrush="DarkBlue"
                XAxisTitleFontSize="14"
                YAxisTitle="Umsatz in Tsd €"
                YAxisTitleAlignment="Center"
                YAxisTitleBrush="DarkRed"
                YAxisTitleFontSize="14" />
            -->
            <local:PieChartControl
                x:Name="MyPieChart"
                Width="600"
                Height="400" />
        </Grid>

    </Grid>
</Window>
